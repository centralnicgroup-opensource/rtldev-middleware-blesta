{
  "name": "blesta-ispapi-registrar",
  "description": "The ISPAPI Registrar Module for BLESTA",
  "version": "0.0.0-development",
  "private": true,
  "author": {
    "name": "Tulasi Seelamkurthi",
    "email": "tseelamkurthi@hexonet.net"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.3.0"
  },
  "homepage": "https://github.com/hexonet/blesta-ispapi-registrar",
  "repository": "github:hexonet/blesta-ispapi-registrar",
  "bugs": "https://github.com/hexonet/blesta-ispapi-registrar/issues",
  "maintainers": [
    {
      "name": "Tulasi Seelamkurthi",
      "email": "tseelamkurthi@hexonet.net"
    }
  ],
  "keywords": [
    "blesta",
    "web host automation platform",
    "registrar module",
    "domain registrar module",
    "hexonet",
    "ispapi",
    "domain",
    "isp",
    "registration"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/exec": "3.3.3",
    "@semantic-release/git": "7.0.12",
    "@semantic-release/github": "5.2.10",
    "conventional-changelog": "3.1.8",
    "semantic-release": "^15.13.16"
  },
  "release": {
    "debug": false,
    "analyzeCommits": {
      "preset": "angular"
    },
    "generateNotes": {
      "preset": "angular"
    },
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "HISTORY.md"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "./updateVersion.sh ${nextRelease.version} ${options.branch}"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "make allarchives"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "HISTORY.md",
          "package.json",
          "package-lock.json",
          "composer.json",
          "composer.lock",
          "ispapi.php",
          "blesta-ispapi-registrar-latest.zip",
          "release.json"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/github",
        "assets": [
          {
            "label": "Blesta Module (zip)",
            "path": "pkg/blesta-ispapi-registrar.zip"
          },
          {
            "label": "Blesta Module (tar.gz)",
            "path": "pkg/blesta-ispapi-registrar.tar.gz"
          }
        ]
      }
    ]
  },
  "scripts": {
    "semantic-release": "semantic-release"
  }
}

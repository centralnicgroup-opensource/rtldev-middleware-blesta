{
    "ci": false,
    "branch": [
        "master"
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "HISTORY.md"
            }
        ],
        [
            "semantic-release-replace-plugin",
            {
                "replacements": [
                    {
                        "files": [
                            "./release.json"
                        ],
                        "from": "(19|20)\\d{2}[- /.](0[1-9]|1[012])[- /.](0[1-9]|[12]\\d|3[01])",
                        "to": "${(new Date()).toISOString().split('T')[0]}",
                        "countMatches": true
                    },
                    {
                        "files": [
                            "./LICENSE"
                        ],
                        "from": "2018-(20[2-9][0-9]|20[0-9][0-9])",
                        "to": "2018-${new Date().getFullYear()}",
                        "countMatches": true
                    },
                    {
                        "files": [
                            "./release.json",
                            "./components/modules/ispapi/config.json"
                        ],
                        "from": "\"\\d+\\.\\d+\\.\\d+\"",
                        "to": "\"${nextRelease.version}\"",
                        "results": [
                            {
                                "hasChanged": true,
                                "numMatches": 2,
                                "numReplacements": 5
                            }
                        ],
                        "countMatches": true
                    }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "HISTORY.md",
                    "@(package?(-lock)|composer).json",
                    "components/modules/ispapi/config.json",
                    "components/modules/ispapi/ispapi.php",
                    "release.json",
                    "blesta-ispapi-registrar-latest.zip"
                ]
            }
        ],
        "semantic-release-teams-notify-plugin",
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "label": "Blesta Module (zip)",
                        "path": "pkg/blesta-ispapi-registrar.zip"
                    }
                ]
            }
        ]
    ]
}